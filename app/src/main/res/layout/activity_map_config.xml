<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:fancy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.jlu.mapgis.activity.MapConfigActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_spotify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            fancy:fb_defaultColor="#7ab800"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_iconResource="@drawable/laptop"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="确认选择"
            fancy:fb_textColor="#FFFFFF"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbbbbb"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.lucasurbas.listitemview.ListItemView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:liv_subtitle="请设置要查看的地图"/>

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/checkable_exampleNoIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:liv_displayMode="icon"
                app:liv_icon="@drawable/selector_ic_radio"
                app:liv_iconColor="@color/color_state_checked"
                app:liv_subtitle="@string/checkable_modeStandard"
                app:liv_title="@string/checkable_exampleNoIcon"/>

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/checkable_exampleSimple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:liv_displayMode="icon"
                app:liv_icon="@drawable/selector_ic_radio"
                app:liv_iconColor="@color/color_state_checked"
                app:liv_subtitle="@string/checkable_modeIcon"
                app:liv_title="@string/checkable_exampleSimple"/>

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/checkable_exampleTwoStates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:liv_displayMode="icon"
                app:liv_icon="@drawable/selector_ic_radio"
                app:liv_iconColor="@color/color_state_checked"
                app:liv_subtitle="@string/checkable_modeIcon"
                app:liv_title="@string/checkable_exampleTwoStates"/>

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/checkable_exampleAnimated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:liv_displayMode="icon"
                app:liv_icon="@drawable/selector_ic_radio"
                app:liv_iconColor="@color/color_state_checked"
                app:liv_subtitle="@string/checkable_modeIcon"
                app:liv_title="@string/checkable_exampleAnimated"/>

            <com.lucasurbas.listitemview.ListItemView
                android:id="@+id/checkable_exampleCircular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:liv_displayMode="icon"
                app:liv_icon="@drawable/selector_ic_radio"
                app:liv_iconColor="@color/color_state_checked"
                app:liv_subtitle="@string/checkable_modeCircularIcon"
                app:liv_title="@string/checkable_exampleCircular"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>