<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_holder"
    style="@style/Card"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/cover"
            style="@style/Cover"
            android:src="@mipmap/profile_cover" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <com.jlu.mapgis.views.CircleImageView
                android:id="@+id/photo"
                android:layout_width="@dimen/profile_picture_size"
                android:layout_height="@dimen/profile_picture_size"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/profile_picture" />

            <TextView
                android:id="@+id/name"
                style="@style/Name"
                android:paddingTop="10dp"
                android:text="@string/app_name" />
            <TextView
                android:id="@+id/brief"
                style="@style/Brief"
                android:layout_margin="5dp"
                android:text="搭建调查成果与基本用户之间的桥梁，服务于土地质量地球化学调查成果的转化" />

            <LinearLayout
                android:id="@+id/section_socialnetworks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:minHeight="200dp"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingRight="40dp"
                android:paddingLeft="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:gravity="center">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/app_info_btn"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        fancy:fb_defaultColor="#55acee"
                        fancy:fb_focusColor="#313131"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_iconResource="@drawable/app_info"
                        fancy:fb_radius="16dp"
                        fancy:fb_iconPosition="top"
                        fancy:fb_text="项目简介"
                        fancy:fb_textColor="#FFFFFF"/>

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/map_cfg_btn"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        fancy:fb_defaultColor="#ff8800"
                        fancy:fb_focusColor="#313131"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_iconResource="@drawable/map_cfg"
                        fancy:fb_radius="16dp"
                        fancy:fb_iconPosition="top"
                        fancy:fb_text="设置地图"
                        fancy:fb_textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/map_mgr_btn"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        fancy:fb_defaultColor="#3f729b"
                        fancy:fb_focusColor="#313131"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_iconResource="@drawable/map_mgr"
                        fancy:fb_radius="16dp"
                        fancy:fb_iconPosition="top"
                        fancy:fb_text="地图管理"
                        fancy:fb_textColor="#FFFFFF"/>

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/enter_map_btn"
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_marginRight="10dp"
                        android:padding="10dp"
                        fancy:fb_defaultColor="#007ee5"
                        fancy:fb_focusColor="#313131"
                        fancy:fb_iconPaddingLeft="0dp"
                        fancy:fb_iconPaddingRight="0dp"
                        fancy:fb_iconResource="@drawable/enter_map"
                        fancy:fb_radius="16dp"
                        fancy:fb_iconPosition="top"
                        fancy:fb_text="进入地图"
                        fancy:fb_textColor="#FFFFFF"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/exit_app_btn"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:padding="10dp"
                        fancy:fb_borderColor="#FFFFFF"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="#ff5f69"
                        fancy:fb_focusColor="#ff838b"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="退出系统"
                        fancy:fb_textColor="#FFFFFF">
                    </mehdi.sakout.fancybuttons.FancyButton>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>