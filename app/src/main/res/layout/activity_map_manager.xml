<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:fancy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.jlu.mapgis.activity.MapConfigActivity">

    <ScrollView
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/map_mgr_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#55acee"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/add_map_btn"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#55acee"
            fancy:fb_focusColor="#8cc9f8"
            fancy:fb_iconPosition="left"
            fancy:fb_iconResource="@drawable/med_brief"
            fancy:fb_radius="30dp"
            fancy:fb_text="添加地图"
            fancy:fb_textColor="#FFFFFF"></mehdi.sakout.fancybuttons.FancyButton>
    </LinearLayout>
</LinearLayout>